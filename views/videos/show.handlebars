<div id="videos-container" class="contents-container">
  <div class="video-card">

    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <form method="get" action="/videos/{{video._id}}/edit">
        <input type="submit" value="Edit" id="edit-button" class="input-button">
    </form>
    <form method="post" action="/videos/{{video._id}}/deletions">
        <input type="submit" value="Delete" id="delete" class="input-button">
    </form>

    <iframe 
      class="video-player" 
      src="{{video.url}}" 
      frameborder="0" 
      allowfullscreen
    >
    </iframe>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>
  </div>
</div>
